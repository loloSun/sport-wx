@import '../hTemp/hTemp.wxss';
.itemActive{
  width: 100%;
  height: 220rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}
.left{
  width: 180rpx;
  height: 180rpx;
  /* outline: 1px solid #ccc; */
  color: #fff;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* background: #333; */
  background-size: cover;
  background-position: center center;
}
.right{
  width: 450rpx;
  margin-left: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 34rpx;
}
.class{
  color: #999;
  font-size: 33rpx;
}
.moreActive{
  width: 70%;
  height: 100rpx;
  background: #000;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin: 20rpx auto;
  margin-bottom: 200rpx;
}
.ischoose{
  width: 80rpx;
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
}
.ischoose image{
  width: 40rpx;
  margin-bottom: 16rpx;
}

.modal {
    text-align: center;
}

.modal-title {
    text-align: center;
    font-weight: bold;
    font-size: 50rpx;
    color: #333;
    border-bottom: 1rpx solid #7f7f7f;
    width: 100%;
    padding-bottom: 10rpx;
}

.modal-content {
    text-align: center;
    font-size: 36rpx;
    color: #000;
    font-weight: bolder;
    margin-bottom: 20rpx;
}

.modal-bottom {
    margin-top: 20rpx;
    text-align: center;
    font-size: 24rpx;
    color: #333;
}

.modal-btn {
    height: 80rpx;
    line-height: 80rpx;
    width: 60%;
    margin-top: 32rpx;
    color: #fff;
    background-color: #FF6F01;
    font-size: 34rpx;
}

.modal-close {
    top: -20rpx;
    font-size: 36rpx;
    color: #000;
    font-weight: 600;
    left: 530rpx;
    position: relative;
    height: 35rpx;
    width: 35rpx;
}