@import '../hTemp/hTemp.wxss';
.hrdetail{
  width: 100%;
  height: 100%;
}
.top{
  width: 100%;
  height: 440rpx;
  background-image: url(http://cdn.quncrm.com/ntc/images/mine-startup-img.jpg);
  background-size: 100% auto;
  background-position: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 33rpx;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.middle{
  width: 100%;
  height: 400rpx;
  border-bottom: 1rpx solid #ccc;
}
.mTop,.mbtm{
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #999;
}
.mTitle{
  font-size: 33rpx;
  color: #000;
  margin-bottom: 30rpx;
}
.bBtn{
  width: 80%;
  height: 80rpx;
  margin: 0 auto;
  background: #000;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 35rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
}
.hasPlan{
  background: #777;
}